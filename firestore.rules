
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access to plans so anyone can see them
    match /plans/{planId} {
      allow read: if true;
      allow write: if request.auth != null; // Allow logged-in users to write (for superuser)
    }

    // Allow authenticated users to read and write to all other collections
    // This is a secure default for a logged-in-only app.
    match /{path=**}/{documentId} {
       allow read, write: if request.auth != null;
    }
  }
}
