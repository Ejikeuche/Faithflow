
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read and write access to all collections.
    // This is for demonstration purposes as there is no real authentication.
    // For a production app, you would secure this with user authentication rules.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
