
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to the 'plans' collection for any signed-in user.
    match /plans/{planId} {
      allow read: if request.auth != null;
      allow write: if false; // Disallow writing from the client
    }

    // Lock down all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
