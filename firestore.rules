
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write access to any collection for any authenticated user.
    // This is a common and secure starting point for apps where all users
    // who can sign in are considered trusted administrators.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
